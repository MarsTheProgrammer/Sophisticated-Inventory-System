<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddPartForm">
    <Label layoutX="42.0" layoutY="53.0" text="Add Part">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Label>
    <RadioButton fx:id="addPartInHouseRadBtn" layoutX="148.0" layoutY="55.0" mnemonicParsing="false"
                 onAction="#onActionInHouseChange" onMouseClicked="#clearTxtFld" selected="true" text="In-House">
        <toggleGroup>
            <ToggleGroup fx:id="radioBtnTgl"/>
        </toggleGroup>
    </RadioButton>
    <RadioButton fx:id="addPartOutsourcedRadBtn" layoutX="288.0" layoutY="55.0" mnemonicParsing="false"
                 onAction="#onActionOutsourceChange" onMouseClicked="#clearTxtFld" text="Outsourced"
                 toggleGroup="$radioBtnTgl"/>
    <GridPane layoutX="60.0" layoutY="123.0" prefHeight="180.0" prefWidth="216.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="95.0" minWidth="10.0" prefWidth="77.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="124.0" minWidth="10.0" prefWidth="123.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Label text="ID"/>
        <Label text="Name" GridPane.rowIndex="1"/>
        <Label text="Inv" GridPane.rowIndex="2"/>
        <Label text="Price/Cost" GridPane.rowIndex="3"/>
        <Label text="Max" GridPane.rowIndex="4"/>
        <Label fx:id="addPartChangeLabel" text="MachineID" GridPane.rowIndex="5"/>
        <TextField fx:id="addPartIdTxtFld" GridPane.columnIndex="1"/>
        <TextField fx:id="addPartNameTxtFld" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <TextField fx:id="addPartInvTxtFld" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <TextField fx:id="addPartPriceTxtFld" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <TextField fx:id="addPartMaxTxtFld" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <TextField fx:id="addPartChangeTxtFld" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    </GridPane>
    <Label layoutX="300.0" layoutY="251.0" text="Min"/>
    <TextField fx:id="addPartMinTxtFld" layoutX="344.0" layoutY="247.0"/>
    <Button fx:id="addPartSaveBtn" layoutX="285.0" layoutY="358.0" mnemonicParsing="false" text="Save"/>
    <Button fx:id="addPartCancelBtn" layoutX="356.0" layoutY="358.0" mnemonicParsing="false"
            onAction="#onActionCancelMainMenu" text="Cancel"/>
</AnchorPane>
